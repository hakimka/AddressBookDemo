@page
@model DemoAddressBook.Pages.Customers.Index1Model
@{
}

<br>
<h2>New Customer</h2>


@*Show Error Message*@
@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show"  role="alert">
		<strong>@Model.errorMessage</strong>
		<button type ="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}


<form method="post">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">First Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="fname" value="@Model.aCustomer.firstName">
		</div>		
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Last Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="lname" value="@Model.aCustomer.lastName">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Email</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="email" value="@Model.aCustomer.emailAddress">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Address</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="address" value="@Model.aCustomer.postAddressStreet">
		</div>
	</div>




	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Phone</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="phone" value="@Model.aCustomer.phoneNumber">
		</div>
	</div>


	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="offset-sm-0 col-sm-3	 d-grid">
			<button class="btn btn-outline-primary" href="/" role="button">Cancel</button>
		</div>


		@*Show Ok Message*@
		@if (Model.successMessage.Length > 0)
		{
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<strong>@Model.successMessage </strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}


		@*<div class="offset-sm-3  d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>*@


	</div>



</form>
