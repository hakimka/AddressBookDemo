@page
@model DemoAddressBook.Pages.Customers.IndexModel
@{
}

<br>
<h2>Customers</h2>
<a class="btn btn-primary btn-sm" href="/Customers/Create">New Customer</a>
<table class="table">

	<thead> 
		<tr> 
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Address</th>
			<th>Phone</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>
			@foreach (var item in Model.customers)
			{
				<tr>
				<td> @item.id</td>
				<td> @item.firstName</td>
				<td> @item.lastName</td>
				<td> @item.emailAddress</td>
				<td> @item.postAddressStreet</td>
				<td> @item.phoneNumber</td>
					<td> </td>
					<td> 
						<a class="btn btn-primary btn-sm" href="/Customers/Edit?id=@item.id"  >Edit</a>
						<a class="btn btn-danger  btn-sm" href="/Customers/Delete?id=@item.id">Delete</a>
					</td>


				</tr>
			}
		</tbody>



</table>

